#!/bin/bash

if [ "$#" -ne 1 ]; then
  echo "Usage: ./bin/assemble name"
  exit 1
fi

mkdir -p target                                                             && \
                                                                               \
as src/$1.s -o target/$1.o                                                  && \
                                                                               \
ld target/$1.o -o target/$1                                                    \
   -arch arm64                                                                 \
   -syslibroot `xcrun -sdk macosx --show-sdk-path`                             \
   -lSystem
